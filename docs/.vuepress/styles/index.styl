@media (min-width: 1025px)
  .theme-default-content.content__default, page-edit, page-nav
    min-width: 50rem
    max-width: 58vw

  ul, ol
    line-height: 2
  h4
    font-size: 1.2rem
  h4+p
    line-height: 1.5

    
.theme-default-content code
  color: #d63200

.custom-block.details
  summary
    font-weight: 500
    font-size: 1.1rem

  blockquote
    color: #2c3e50
    margin-bottom: 0.1rem

blockquote > p, .page li
  margin-bottom: 0.3rem

index-motto-size = 2rem

.index-motto-yangming, .index-motto-jobs
  font-size: index-motto-size
  line-height: index-motto-size
  font-family: cursive
  font-weight: bold
  margin: index-motto-size 0
  width: 100%
  text-align: center
  background: linear-gradient(#70D6FF, #00072D)
  -webkit-text-fill-color: transparent
  -webkit-background-clip: text

.index-motto-jobs
  margin-top: -12px
  font-size: 24px


ul.contains-task-list
  padding-left: 0
.task-list-item::marker
  content: ''

figure
  text-align: center;